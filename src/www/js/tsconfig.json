{
  "compilerOptions": {
    "rootDir": "src/js",
    "outDir": "src/www/js",
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["components/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}